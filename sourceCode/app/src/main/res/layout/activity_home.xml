<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageButton
        android:id="@+id/a_home_ib_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_manage"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/a_home_ib_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_home_ib_settings"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/a_home_ib_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_home_ib_profile"
        app:srcCompat="@android:drawable/ic_input_get"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/a_home_ib_auction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_home_ib_players"
        app:srcCompat="@android:drawable/ic_menu_today"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/a_home_ib_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/a_home_ib_team"
        app:srcCompat="@android:drawable/ic_menu_agenda"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/a_home_vd_left"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toEndOf="@+id/a_home_ib_settings"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/a_home_iv_picture"
        android:layout_width="176dp"
        android:layout_height="158dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/a_home_iv_picture"
        app:layout_constraintStart_toEndOf="@+id/a_home_vd_left"
        app:layout_constraintTop_toBottomOf="@+id/a_home_tv_name"
        app:srcCompat="@drawable/default_profile" />

    <TextView
        android:id="@+id/a_home_tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="40dp"
        android:text="@string/a_home_tv_welcome"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/a_home_vd_left"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/a_home_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="40dp"
        android:text="@string/a_home_tv_name"
        app:layout_constraintStart_toEndOf="@+id/a_home_vd_left"
        app:layout_constraintTop_toBottomOf="@+id/a_home_tv_welcome" />
</androidx.constraintlayout.widget.ConstraintLayout>